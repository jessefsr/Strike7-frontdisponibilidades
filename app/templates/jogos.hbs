<div class="row">
<div class="col-sm-6">
  {{outlet}}
  <div class="clearfix">...</div>
</div>
<div class="col-sm-6">
  <table class="table table-hover">
    <thead>
            <tr class="row">
              <th class="col-md-1">#</th>
              <th class="col-md-5">Titulo</th>
              <th class="col-md-1">Disponibilidade</th>
              <th class="col-md-2">Cover</th>
              <th class="col-md-1">Acao</th>
            </tr>
    </thead>
    <tbody>
      {{#each model as |game|}}
      <tr class="row" >
        <td class="col-md-1">#{{game.id}}</td>
        <td class="col-md-7">{{game.titulo}}</td>
        <td class="col-md-1">{{game.situacao}}</td>
        <td class="col-md-2">
          <div class="img-content">
            <img src="{{game.cover_url}}" class="img-responsive" />
          </div>
        </td>
        <td class="col-md-1">
          <button {{action 'trocaDisponibilidade' game}} class="btn btn-default glyphicon glyphicon-retweet"></button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
</div>
